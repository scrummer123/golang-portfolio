{
  "compilerOptions": {
    "outDir": "./src/build/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["./src/**/**/*"]
}
